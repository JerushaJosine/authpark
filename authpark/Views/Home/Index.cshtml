@using authpark.Models;
@model IEnumerable<Location>
@{
    ViewBag.Title = "Home Page";
}

@*<script src="~/Scripts/GoogleMaps.js"></script>*@
<script src="~/Scripts/jquery-3.4.1.js"></script> @*This Jquery Link*@
<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script src="http://maps.google.com/maps/api/js?key=AIzaSyCX4Mit4hdeYcuLyDdHnQoP8sX9L0GrzCg" type="text/javascript"></script> @*google maps*@
<script src="~/Scripts/GetDirectionsWithGoogleMaps.js"></script>

<!-- This css is to ensure that the google map contols (zoom bar etc) show and size correctly. -->
<style>
    #map_canvas img {
        max-width: none
    }
</style>

<!-- This css is to give a nice big popup "info window" when a marker is clicked on the map -->
<style>
    .infoDiv {
        height: 200px;
        width: 300px;
        -webkit-user-select: none;
        background-color: white;
    }
</style>

<!-- This is the div that will contain the Google Map -->

<div id="map_canvas" style="height: 600px;"></div>
<!-- Enclose the Javascript in a "section" so that it is rendered in the correct order after scripts have been loaded etc -->
@section scripts {
    <section class="scripts">
        <script>
        
            var directionsDisplay;
           var currloc, currlng,currlat;
            var directionsService = new google.maps.DirectionsService();
            var Locdata = [];
            var map;
            //Get All direction
            $.ajax({
                url: '/Home/GetAllLocation',
                type: "GET",
                success: (data) => {
                 
                    Locdata = data;
                    initialize();
                },
                error: function (xhr, status, error) {
                    alert(xhr.responseText);
                    alert(status);
                    alert(error);
                }
            });
            // Get Direction
            function direction () {
               
                
                var start = new google.maps.LatLng(currlat,currlng);
                //var end = new google.maps.LatLng(38.334818, -181.884886);
                var end = new google.maps.LatLng(29.799465924030258, 72.18381601462049);
                var bounds = new google.maps.LatLngBounds();
                bounds.extend(start);
                bounds.extend(end);
                map.fitBounds(bounds);
                var request = {
                    origin: start,
                    destination: end,
                    travelMode: google.maps.TravelMode.DRIVING
                };
                directionsService.route(request, function (response, status) {
                    if (status == google.maps.DirectionsStatus.OK) {
                        directionsDisplay.setDirections(response);
                        directionsDisplay.setMap(map);
                    } else {
                        alert("Directions Request from " + start.toUrlValue(6) + " to " + end.toUrlValue(6) + " failed: " + status);
                    }
                });
            };
            //Initialize map
            function initialize() {
                debugger;
                currentloc();
                directionsDisplay = new google.maps.DirectionsRenderer();
                var chicago = new google.maps.LatLng(29.7921, 72.1772);
                var myLatlng = new google.maps.LatLng(53.40091, -2.994464);
                var mapOptions = {
                    zoom: 12,
                    center: chicago
                };
                map = new google.maps.Map(document.getElementById('map_canvas'), mapOptions);

                var marker = new google.maps.Marker({
                    position: myLatlng,
                    map: map,
                    title: 'Tate Gallery'
                });

                directionsDisplay.setMap(map);

                marker.setIcon('http://maps.google.com/mapfiles/ms/icons/green-dot.png')
                $.each(Locdata, function (i, item) {
                    var marker = new google.maps.Marker({
                        'position': new google.maps.LatLng(item.Long, item.Lat),
                        'map': map,
                        'title': item.Name
                    });
                    marker.setIcon('http://maps.google.com/mapfiles/ms/icons/blue-dot.png')
                    var infowindow = new google.maps.InfoWindow({
                        content: "<div class='infoDiv'><h2>" + item.Name + "</h2>" + "<div><h4>Total Vaccancies: " + item.TotalVacancies + "</h4>"+"<button id='direction' onclick='direction()'>Get Direction</button></div></div>"
                    });
                    google.maps.event.addListener(marker, 'click', function () {
                        infowindow.open(map, marker);
                    });
                })
            }
            //Get Current Location
            function currentloc() {
                if (navigator.geolocation) {
                    navigator.geolocation.getCurrentPosition(
                        (position) => {
                            debugger;
                            const pos = {
                                currlat: position.coords.latitude,
                                currlng: position.coords.longitude,
                            };
                            currloc = pos;
                            currlat = position.coords.latitude;
                            currlng = position.coords.longitude;
                            map.setCenter(pos);
                        },
                        () => {
                            handleLocationError(true, infoWindow, map.getCenter());
                        }
                    );
                }
            } 
            

        </script>
     
    </section>
}
